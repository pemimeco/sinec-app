<!DOCTYPE html>
<html lang="en">

<% include resources.ejs %>

<body>

    <% include menu.ejs %>
    <main>
        <div class="container">
            <div class="row">
                <form action="/buscarAsegurado" method="POST" class="col s12">
                    <!-- <h3>SINEC</h3> -->
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="search" name="edtBuscar" type="text" class="validate"
                                value="<%= typeof id != 'undefined' ? id : '' %>">
                            <label for="search">Buscar</label>
                            <button class="btn waves-effect waves-light" type="submit" name="btnBuscar">Buscar
                                <i class="material-icons right">search</i>
                            </button>
                        </div>
                    </div>
                    <div>
                        <h6>
                            <%= typeof message != 'undefined' ? message : '' %>
                        </h6>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="name" name="nombre" type="text" class="validate"
                                value="<%= typeof nombre != 'undefined' ? nombre : '' %>">
                            <label for="name">Nombres</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" name="apellidos" type="text" class="validate"
                                value="<%= typeof apellido != 'undefined' ? apellido : '' %>">
                            <label for="last_name">Apellidos</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="company" name="empresa" type="text" class="validate"
                                value="<%= typeof empresa != 'undefined' ? empresa : '' %>">
                            <label for="company">Empresa</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="join_date" name="empresa" type="text" class="validate"
                                value="<%= typeof fec_ing != 'undefined' ? fec_ing : '' %>">
                            <label for="join_date">Fecha de Ingreso</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="join_date" name="empresa" type="text" class="validate"
                                value="<%= typeof fec_ing != 'undefined' ? fec_ing : '' %>">
                            <label for="join_date">Fecha de Ingreso</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="num_matricula" name="nro_matricua" type="text" class="validate"
                                value="<%= typeof matricula != 'undefined' ? matricula : '' %>">
                            <label for="num_matricula">Nro. Matricula</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="birth_date" name="nro_matricua" type="text" class="validate"
                                value="<%= typeof fec_nac != 'undefined' ? fec_nac : '' %>">
                            <label for="birth_date">Fecha de Nacimiento</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="blood_type" name="tipo_sangre" type="text" class="validate"
                                value="<%= typeof tipo_sangre != 'undefined' ? tipo_sangre : '' %>">
                            <label for="blood_type">Tipo de Sangre</label>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn waves-effect waves-light" type="submit" name="btnRegistrar">Registrar
                            <i class="material-icons right">person_add</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <% include footer.ejs %>
</body>

</html>